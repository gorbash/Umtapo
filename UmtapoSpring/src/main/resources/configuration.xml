<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="dbConfig" class="com.gorbash.umtapo.jpa.db.DBConfig">
        <property name="url" value="jdbc:hsqldb:hsql://localhost/"/>
    </bean>

    <bean id="dbSetup" class="com.gorbash.umtapo.jpa.db.DBSetup">
        <constructor-arg index="0" ref="dbConfig"/>
    </bean>

    <bean id = "dataAccess" class = "com.gorbash.umtapo.jpa.dataAccess.HibernateDataAccess">
        <constructor-arg index="0" ref="dbSetup"/>
    </bean>

    <bean id = "objectFactory" class = "com.gorbash.umtapo.spring.dataService.dataObjects.RestDataObjectFactory"/>

    <bean id="dataService" class="com.gorbash.umtapo.spring.dataService.JPADataService">
        <constructor-arg index="0" ref="dataAccess"/>
        <constructor-arg index="1" ref="objectFactory"/>
    </bean>

</beans>